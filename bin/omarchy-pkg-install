#!/bin/bash

generate_pkg_lines() {
  {
    pacman -Sl --color=always
    yay -Sla --color=always
  } | awk '{printf "%s\t%s\n", $2, $0}'
}

fzf_args=(
  --ansi
  --delimiter=$'\t'
  --with-nth=2..
  --no-sort
  --exact
  --multi
  --preview 'echo "alt-p: toggle description, alt-j/k: scroll, F11: maximize"; echo; yay -Sii {1}'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
)

readarray -t pkg_array < <(generate_pkg_lines | fzf "${fzf_args[@]}" | cut -f1)

if [[ ${#pkg_array[@]} -gt 0 ]]; then
  yay -Sy --noconfirm "${pkg_array[@]}"
  sudo updatedb
  omarchy-show-done
fi
